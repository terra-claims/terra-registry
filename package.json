  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/terra-claims/terra-registry/issues"
  },
  "homepage": "https://github.com/terra-claims/terra-registry#readme",
  "devDependencies": {
    "ganache-cli": "^6.1.0",
    "solhint": "^1.2.1",
    "solium": "^1.1.7",
    "truffle": "^4.1.11"
  }
}
